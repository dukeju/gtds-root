<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping package="com.brother.model">
	<class name="Admin" table="admins">
		<id name="id" type="integer" column="id">
			<generator class="identity"></generator>
		</id>
		
		<property name="name" column="name" type="string" length="50"></property>
		<property name="number" column="number" type="string" length="50"></property>
		<property name="password" column="password" type="string" length="50"></property>
		<property name="email" column="email" type="string" length="50"></property>
		<property name="address" column="address" type="string" length="50"></property>
		<property name="sex" column="sex" type="string" length="2"></property>
		<property name="birth" column="birth" type="string" length="15"></property>
		<property name="entranceDate" column="entrance_date" type="string" length="15"></property>
		<property name="nation" column="nation" type="string" length="20"></property>
		<property name="photoURL" column="photo_url" type="string" length="50"></property>
		<property name="department" column="department" type="string" length="20"></property>
		<property name="major" column="major" type="string" length="20"></property>

	</class>
</hibernate-mapping>