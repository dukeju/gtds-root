<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping package="com.brother.gtds.model">
	<class name="ReplyGroup" table="replyGroups">
		<id name="id" type="integer" column="id">
			<generator class="identity"></generator>
		</id>
		
		<property name="time" column="reply_time" type="string" length="50"></property>
		<property name="place" column="reply_place" type="string" length="50"></property>
		<property name="pub" column="public" type="boolean"></property>

		<!--映射从 ReplyGroup 到  Teacher 的单向多对一关联关系  -->
		<many-to-one name="advisor" class="Teacher" column="advisor_id"></many-to-one>
		<!--映射从 ReplyGroup 到  Teacher 的单向多对一关联关系  -->
		<many-to-one name="valuator" class="Teacher" column="valuator_id"></many-to-one>
		<!--映射从 ReplyGroup 到  Teacher 的单向多对一关联关系 -->
		<many-to-one name="head" class="Teacher" column="head_id"></many-to-one>
		<!--映射从 ReplyGroup 到  Teacher 的单向多对一关联关系  -->
		<many-to-one name="recorder" class="Teacher" column="recorder_id"></many-to-one>
		<!--映射从 ReplyGroup 到  Teacher 的双向多对多关联关系  -->
		<set name="tutors" table="tutor_group">
			<key column="replyGroup_id"></key>
			<many-to-many class="Teacher" column="tutor_id"></many-to-many>
		</set>

	</class>
</hibernate-mapping>